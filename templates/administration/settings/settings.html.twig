{% extends 'administration/administration_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'administration.settings.title'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{{ 'administration.settings.title'|trans }}{% endblock %}

{% block pageBody %}
    {{ form_start(form) }}
        <div class="container-xl">
            <div class="row">
                <div class="col-12 col-lg-6 mb-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'administration.settings.mainSettings.title'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.mosparoName) }}
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'administration.settings.localeSettings.title'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.defaultLocale) }}
                            {{ form_row(form.defaultDateFormat) }}
                            {{ form_row(form.defaultTimeFormat) }}
                            {{ form_row(form.defaultTimezone) }}
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">{{ 'administration.settings.mailSettings.title'|trans }}</h3>
                        </div>
                        <div class="card-body">
                            {{ form_row(form.mailerFromAddress) }}
                            {{ form_row(form.mailerFromName) }}
                            <hr>
                            {{ form_row(form.mailerUseSmtp) }}
                            {{ form_row(form.mailerHost) }}
                            {{ form_row(form.mailerPort) }}
                            {{ form_row(form.mailerUser) }}
                            {{ form_row(form.mailerPassword) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12 col-md-auto ms-auto">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="ti ti-device-floppy"></i>
                        {{ 'action.save'|trans }}
                    </button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function () {
            $('#form_mailerUseSmtp').change(function () {
                if ($(this).is(':checked')) {
                    $('.mail-option').prop('disabled', false);
                } else {
                    $('.mail-option').prop('disabled', 'disabled');
                }
            }).trigger('change');
        });
    </script>
{% endblock %}