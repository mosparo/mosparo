        <div class="col-12 col-lg-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ 'administration.system.general.title'|trans }}</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-5">
                            <h4 class="mb-0">
                                {{ 'administration.system.general.mosparoVersion'|trans }}
                            </h4>
                        </div>
                        <div class="col-7">
                            {{ mosparoVersion }}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-5">
                            <h4 class="mb-0">
                                {{ 'administration.system.general.serverInfo'|trans }}
                            </h4>
                        </div>
                        <div class="col-7">
                            {{ serverInfo }}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-5">
                            <h4 class="mb-0">
                                {{ 'administration.system.general.phpVersion'|trans }}
                            </h4>
                        </div>
                        <div class="col-7">
                            {{ phpVersion }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-5">
                            <h4 class="mb-0">
                                {{ 'administration.system.general.extensions'|trans }}
                            </h4>
                        </div>
                        <div class="col-7">
                            {% for extension, versionNumber in extensionsData %}
                                <div class="row">
                                    <div class="col">
                                        <strong>{{ extension }}</strong>
                                    </div>
                                    <div class="col">
                                        {% if versionNumber %}
                                            {{ versionNumber }}
                                        {% else %}
                                            -
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title">{{ 'downloadCheck.cardTitle'|trans }}</h3>
                </div>
                <div class="card-body">
                    <p>
                        {{ 'downloadCheck.intro'|trans }}
                    </p>
                    {% include 'snippets/download-check.html.twig' %}
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header">
                    <h3 class="card-title">{{ 'administration.system.license.title'|trans }}</h3>
                </div>
                <div class="card-body">
                    <pre>{{ licenseContent|raw }}</pre>
                </div>
            </div>
