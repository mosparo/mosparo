{% extends 'administration/administration_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'administration.system.title'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{{ 'administration.system.title'|trans }}{% endblock %}

{% block administrationPageBody %}
