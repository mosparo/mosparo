{% extends 'base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'project.create.title'|trans }} &rsaquo; {{ 'project.createWizard.security.title'|trans }} - {{ parent() }}{% endblock %}
{% block pageTitle %}{% endblock %}

{% block pageBody %}
    <div class="container-xl pb-4">
        <div class="row">
            <div class="col text-center">
                <img src="{{ asset('build/images/icons/project_new.svg') }}" class="mb-5 illustration-detail" alt="" />
            </div>
        </div>

        <div class="row">
            <div class="col col-lg-9 mx-auto">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-12">
                            <div class="card card-md">
                                <div class="card-body">
                                    <h2 class="card-title text-center mb-4">
                                        <span class="text-muted">{{ 'project.create.title'|trans }} <i class="ti ti-chevron-right"></i></span> {{ 'project.createWizard.security.title'|trans }}
                                    </h2>

                                    <p>{{ 'project.createWizard.security.introSecurity'|trans }}</p>

                                    <div class="row">
                                        <div class="col-12 col-lg-6 mb-3">
                                            <h3 class="card-title mb-1">
                                                {{ form_widget(form.minimumTimeActive) }}
                                            </h3>
                                            <p>
                                                {{ 'settings.security.minimumTime.introShort'|trans }}
                                            </p>
                                        </div>
                                        <div class="col-12 col-lg-6 mb-3">
                                            <h3 class="card-title mb-1">
                                                {{ form_widget(form.honeypotFieldActive) }}
                                            </h3>
                                            <p>
                                                {{ 'settings.security.honeypot.intro'|trans }}
                                            </p>
                                        </div>
                                        <div class="col-12 col-lg-6 mb-3">
                                            <h3 class="card-title mb-1">
                                                {{ form_widget(form.delayActive) }}
                                            </h3>
                                            <p>
                                                {{ 'settings.security.requestDelaying.intro'|trans }}
                                            </p>
                                        </div>
                                        <div class="col-12 col-lg-6 mb-3">
                                            <h3 class="card-title mb-1">
                                                {{ form_widget(form.lockoutActive) }}
                                            </h3>
                                            <p>
                                                {{ 'settings.security.ipLockout.intro'|trans }}
                                            </p>
                                        </div>
                                    </div>

                                    <div class="alert alert-info">
                                        {{ 'project.createWizard.security.infoSettings'|trans }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 col-md-auto mt-2 mt-md-0 order-last order-md-first">
                            <a href="{{ path('project_list') }}" class="btn btn-outline-secondary w-100" tabindex="1000">
                                <i class="ti ti-chevron-left"></i>
                                {{ 'project.backToList'|trans }}
                            </a>
                        </div>
                        <div class="col-12 col-md-auto mt-2 mt-md-0 mx-auto">
                            <a href="{{ path('tools_import') }}" class="btn btn-outline-lime w-100">
                                <i class="ti ti-file-import"></i>
                                {{ 'action.importProject'|trans }}
                            </a>
                        </div>
                        <div class="col-12 col-md-auto order-first order-md-last">
                            <div class="row">
                                <div class="col-12 col-md-auto mt-2 mt-md-0 order-last order-md-first">
                                    <a href="{{ path('project_switch', {'project': project.id}) }}" class="btn btn-secondary w-100">
                                        <i class="ti ti-arrow-ramp-left"></i>
                                        {{ 'action.skipWizard'|trans }}
                                    </a>
                                </div>
                                <div class="col-12 col-md-auto">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="ti ti-device-floppy"></i>
                                        {{ 'action.saveAndContinue'|trans }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}