{% extends 'project_related/settings/settings_base.html.twig' %}

{% trans_default_domain 'mosparo' %}

{% block documentTitle %}{{ 'settings.security.generalSecuritySettings.action'|trans }} - {{ 'settings.security.title'|trans }} - {{ parent() }}{% endblock %}
{% block pagePreTitle %}{{ parent() }} {{ 'settings.security.title'|trans }}  <i class="ti ti-chevron-right"></i>{% endblock %}
{% block pageTitle %}{% endblock %}

{% block pageBody %}
    <div class="container-xl pb-4">
        <div class="row">
            <div class="col col-lg-9 mx-auto">
                <h1 class="h2">
                    {{ 'settings.security.generalSecuritySettings.action'|trans }}
                </h1>
                {{ form_start(form) }}
                    {% include 'project_related/settings/security/form/security_settings.html.twig' with { 'form': form } %}

                    <div class="row mt-3">
                        <div class="col-12 col-md-auto mt-2 mt-md-0">
                            <a href="{{ path('settings_security', { '_projectId': activeProject.id }) }}" class="btn btn-outline-secondary w-100" tabindex="1000">
                                <i class="ti ti-chevron-left"></i>
                                {{ 'settings.security.backToSecurity'|trans }}
                            </a>
                        </div>
                        <div class="col-12 col-md-auto ms-auto">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="ti ti-device-floppy"></i>
                                {{ 'action.save'|trans }}
                            </button>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% include 'project_related/settings/security/form/scripts.html.twig' %}
{% endblock %}